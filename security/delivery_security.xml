<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Teslimat Kategori -->
        <record id="module_category_inventory_delivery" model="ir.module.category">
            <field name="name">Teslimat Yönetimi</field>
            <field name="description">Teslimat yönetimi modülü</field>
            <field name="sequence">20</field>
        </record>

        <!-- Teslimat Yönetici Grubu -->
        <record id="group_delivery_manager" model="res.groups">
            <field name="name">Teslimat Yöneticisi</field>
            <field name="category_id" ref="module_category_inventory_delivery"/>
            <field name="implied_ids" eval="[(4, ref('group_delivery_user'))]"/>
        </record>

        <!-- Teslimat Kullanıcı Grubu -->
        <record id="group_delivery_user" model="res.groups">
            <field name="name">Teslimat Kullanıcısı</field>
            <field name="category_id" ref="module_category_inventory_delivery"/>
        </record>

        <!-- Sınırsız Teslimat Grubu -->
        <record id="group_delivery_unlimited" model="res.groups">
            <field name="name">Sınırsız Teslimat</field>
            <field name="category_id" ref="module_category_inventory_delivery"/>
            <field name="comment">Bu gruptaki kullanıcılar günlük 7 teslimat limitine tabi değildir</field>
        </record>

        <!-- Teslimat Belgesi Güvenlik Kuralları -->
        <record id="delivery_document_rule_user" model="ir.rule">
            <field name="name">Teslimat Belgesi: Kullanıcı Erişimi</field>
            <field name="model_id" ref="model_delivery_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_delivery_user'))]"/>
        </record>

        <record id="delivery_document_rule_manager" model="ir.rule">
            <field name="name">Teslimat Belgesi: Yönetici Erişimi</field>
            <field name="model_id" ref="model_delivery_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_delivery_manager'))]"/>
        </record>
    </data>
</odoo>